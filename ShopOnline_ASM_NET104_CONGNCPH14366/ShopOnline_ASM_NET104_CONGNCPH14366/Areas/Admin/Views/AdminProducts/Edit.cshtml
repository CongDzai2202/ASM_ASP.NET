@model ShopOnline_ASM_NET104_CONGNCPH14366.Models.Product

@{
    ViewData["Title"] = "Sửa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<form asp-controller="AdminProducts" asp-action="Edit" enctype="multipart/form-data">
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">

            </div>
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Option Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Description</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="id">ID</label>
                        <input type="text" class="form-control" asp-for="ProductId">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên Sản Phẩm</label>
                        <input type="text" class="form-control" asp-for="ProductName">
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Giá Bán</label>
                            <input type="text" class="form-control" asp-for="Price">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Giá Giảm</label>
                            <input type="text" class="form-control" asp-for="Discount">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productCategory">Danh Muc Sản Phẩm</label>
                            <select class="custom-select" asp-for="CatId" style="min-width: 200px;" asp-items="ViewBag.CatId">
                                <option value="" disabled selected> Chọn Danh Mục </option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productName">Số Lượng</label>
                            <input type="text" class="form-control" asp-for="UnitslnStock">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productBrand">Ảnh đại diện</label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="m-t-25">
                            <div class="form-group">
                                <label asp-for="Active" class="control-label">Trạng Thái</label>
                                <input asp-for="Active" class="form-control" />
                                <span asp-validation-for="Active" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HomeFlag" class="control-label">HomeFlag</label>
                                <input asp-for="HomeFlag" class="form-control" />
                                <span asp-validation-for="HomeFlag" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BestSellers" class="control-label">Giảm Giá</label>
                                <input asp-for="BestSellers" class="form-control" />
                                <span asp-validation-for="BestSellers" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">Title</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productColors">Colors</label>
                        <input type="text" class="form-control" asp-for="MetaDesc">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productFit">Fit</label>
                        <input type="text" class="form-control" asp-for="MetaKey">
                    </div>

                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <div id="productDescription">
                        <p>Đây Là Mô Tả</p>
                    </div>
                </div>
            </div>
        </div>
</form>

